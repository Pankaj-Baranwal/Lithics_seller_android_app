<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/crop_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please choose an image"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:textSize="18sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/small_padding_horizontal"
        android:layout_marginRight="@dimen/small_padding_horizontal"
        >
        <Button
            android:id="@+id/load_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load Image"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/half_small_padding_horizontal"
            />
        <Button
            android:id="@+id/crop_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crop Image"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/half_small_padding_horizontal"
            />
    </LinearLayout>
</RelativeLayout>