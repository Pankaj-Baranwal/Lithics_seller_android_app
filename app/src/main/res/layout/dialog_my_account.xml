<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:gravity="center"
    android:background="#fff"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    >
    <TextView
        android:id="@+id/heading_my_account_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/small_padding_vertical"
        android:paddingTop="@dimen/small_padding_vertical"
        android:text="Contact Details"
        android:textSize="20sp"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        />
    <ScrollView
        android:layout_below="@+id/heading_my_account_dialog"
        android:layout_above="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <LinearLayout
        android:id="@+id/ll_dialog_contact"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"

        >
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/name_organization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of Organization"
        app:met_baseColor="@color/colorPrimaryDark"
        app:met_floatingLabel="normal"
        app:met_textColorHint="#8111"
        app:met_floatingLabelTextColor="#c111"
        app:met_minCharacters="4"
        app:met_maxCharacters="20"
        android:paddingLeft="@dimen/small_padding_horizontal"
        android:paddingRight="@dimen/small_padding_horizontal"
        android:layout_marginLeft="@dimen/small_padding_horizontal"
        android:layout_marginRight="@dimen/small_padding_horizontal"
        android:layout_marginTop="@dimen/small_padding_vertical"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email ID"
        android:inputType="textEmailAddress"
        app:met_baseColor="@color/colorPrimaryDark"
        app:met_floatingLabel="normal"
        app:met_textColorHint="#8111"
        app:met_floatingLabelTextColor="#c111"
        app:met_minCharacters="4"
        app:met_maxCharacters="20"
        android:paddingLeft="@dimen/small_padding_horizontal"
        android:paddingRight="@dimen/small_padding_horizontal"
        android:layout_marginLeft="@dimen/small_padding_horizontal"
        android:layout_marginRight="@dimen/small_padding_horizontal"
        android:layout_marginTop="@dimen/small_padding_vertical"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact Name"
        app:met_baseColor="@color/colorPrimaryDark"
        app:met_floatingLabel="normal"
        app:met_textColorHint="#8111"
        app:met_floatingLabelTextColor="#c111"
        app:met_minCharacters="4"
        app:met_maxCharacters="15"
        android:paddingLeft="@dimen/small_padding_horizontal"
        android:paddingRight="@dimen/small_padding_horizontal"
        android:layout_marginLeft="@dimen/small_padding_horizontal"
        android:layout_marginRight="@dimen/small_padding_horizontal"
        android:layout_marginTop="@dimen/small_padding_vertical"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/mobile_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile No"
        android:inputType="phone"
        app:met_baseColor="@color/colorPrimaryDark"
        app:met_floatingLabel="normal"
        app:met_textColorHint="#8111"
        app:met_floatingLabelTextColor="#c111"
        app:met_minCharacters="7"
        app:met_maxCharacters="13"
        android:paddingLeft="@dimen/small_padding_horizontal"
        android:paddingRight="@dimen/small_padding_horizontal"
        android:layout_marginLeft="@dimen/small_padding_horizontal"
        android:layout_marginRight="@dimen/small_padding_horizontal"
        android:layout_marginTop="@dimen/small_padding_vertical"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_dialog_official"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/tin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TIN/VAT No"
            app:met_baseColor="@color/colorPrimaryDark"
            app:met_floatingLabel="normal"
            app:met_textColorHint="#8111"
            app:met_floatingLabelTextColor="#c111"
            app:met_minCharacters="4"
            app:met_maxCharacters="15"
            android:paddingLeft="@dimen/small_padding_horizontal"
            android:paddingRight="@dimen/small_padding_horizontal"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            android:layout_marginTop="@dimen/small_padding_vertical"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/cst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CST No"
            app:met_baseColor="@color/colorPrimaryDark"
            app:met_floatingLabel="normal"
            app:met_textColorHint="#8111"
            app:met_floatingLabelTextColor="#c111"
            app:met_minCharacters="4"
            app:met_maxCharacters="15"
            android:paddingLeft="@dimen/small_padding_horizontal"
            android:paddingRight="@dimen/small_padding_horizontal"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            android:layout_marginTop="@dimen/small_padding_vertical"
            />
        <Button
            android:id="@+id/permanent_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permanent Address"
            android:textColor="#fff"
            android:background="#6db096"
            android:paddingLeft="@dimen/small_padding_horizontal"
            android:paddingRight="@dimen/small_padding_horizontal"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            android:layout_marginTop="@dimen/small_padding_vertical"
            />
        <CheckBox
            android:id="@+id/checkbox_pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup Address same as above"
            />
        <Button
            android:id="@+id/pickup_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pickup Address"
            android:textColor="#fff"
            android:background="#6db096"
            android:paddingLeft="@dimen/small_padding_horizontal"
            android:paddingRight="@dimen/small_padding_horizontal"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            android:layout_marginTop="@dimen/small_padding_vertical"
            />
        <Spinner
            android:id="@+id/state_of_operation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/small_padding_horizontal"
            android:paddingRight="@dimen/small_padding_horizontal"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            android:layout_marginTop="@dimen/small_padding_vertical"
            />
        <Button
            android:id="@+id/product_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Categories"
            android:textColor="#fff"
            android:background="#6db096"
            android:paddingLeft="@dimen/small_padding_horizontal"
            android:paddingRight="@dimen/small_padding_horizontal"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            android:layout_marginTop="@dimen/small_padding_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_dialog_misc"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What are the social groups or communities or target groups associated with you?"
                android:textColor="#000"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/ans1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Comments"
                android:paddingLeft="@dimen/small_padding_horizontal"
                android:paddingTop="@dimen/small_padding_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is the social cause that you or your organisation is working for?"
                android:textColor="#000"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/ans2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Comments"
                android:paddingLeft="@dimen/small_padding_horizontal"
                android:paddingTop="@dimen/small_padding_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you want to avail our ‘FREE’ marketing services (blog, social media, SEO etc) for your products?"
                android:textColor="#000"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/ans3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Comments"
                android:paddingLeft="@dimen/small_padding_horizontal"
                android:paddingTop="@dimen/small_padding_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you want to avail our ‘FREE’ product photography services?"
                android:textColor="#000"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/ans4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Comments"
                android:paddingLeft="@dimen/small_padding_horizontal"
                android:paddingTop="@dimen/small_padding_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you want to use our ‘FREE’ mobile application services?"
                android:textColor="#000"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/ans5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Comments"
                android:paddingLeft="@dimen/small_padding_horizontal"
                android:paddingTop="@dimen/small_padding_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you allow us to use your product images (available on your website, fb page, blog etc)?"
                android:textColor="#000"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/ans6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Comments"
                android:paddingLeft="@dimen/small_padding_horizontal"
                android:paddingTop="@dimen/small_padding_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you allow us to videograph your working/ artisans/ products?"
                android:textColor="#000"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/ans7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Comments"
                android:paddingLeft="@dimen/small_padding_horizontal"
                android:paddingTop="@dimen/small_padding_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you allow us to post articles about your organisation or artisans from time to time?"
                android:textColor="#000"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/ans8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Comments"
                android:paddingLeft="@dimen/small_padding_horizontal"
                android:paddingTop="@dimen/small_padding_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you agree to have ample products in stock before you receive an order?"
                android:textColor="#000"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/ans9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Comments"
                android:paddingLeft="@dimen/small_padding_horizontal"
                android:paddingTop="@dimen/small_padding_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you want to put up your products for bulk order shipments?"
                android:textColor="#000"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/ans10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Comments"
                android:paddingLeft="@dimen/small_padding_horizontal"
                android:paddingTop="@dimen/small_padding_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Does any of your product require extra time (before pickup) after an order is placed by the customer?"
                android:textColor="#000"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/ans11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Comments"
                android:paddingLeft="@dimen/small_padding_horizontal"
                android:paddingTop="@dimen/small_padding_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Would you like us to create adverts with ‘discounted sale’ for your products?"
                android:textColor="#000"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/ans12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Comments"
                android:paddingLeft="@dimen/small_padding_horizontal"
                android:paddingTop="@dimen/small_padding_vertical"
                />
        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="UPDATE"
            android:textColor="#fff"
            android:textSize="22sp"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            />

        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="CANCEL"
            android:textColor="#fff"
            android:textSize="22sp"
            android:layout_marginLeft="@dimen/small_padding_horizontal"
            android:layout_marginRight="@dimen/small_padding_horizontal"
            />
    </LinearLayout>


</RelativeLayout>